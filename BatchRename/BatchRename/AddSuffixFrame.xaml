<Page x:Class="BatchRename.AddSuffixFrame"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BatchRename"
      mc:Ignorable="d" 
      d:DesignHeight="150" d:DesignWidth="400"
      Title="AddSuffixFrame"
      Background="White">

    <StackPanel Orientation="Vertical" Margin="20" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <StackPanel Orientation="Horizontal" Margin="10">
            <Label Content="Add Suffix" Width="90" FontWeight="DemiBold" ></Label>
            <TextBox Name="AddSuffix" Text="{Binding Suffix}" Width="200" 
                         BorderBrush="LightBlue" BorderThickness="2"
                         TextChanged="AddSuffix_TextChanged"
                         />
        </StackPanel>
    </StackPanel>
</Page>
