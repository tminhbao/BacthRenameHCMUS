<Window x:Class="BatchRename.Replace"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BatchRename"
        mc:Ignorable="d"
        Title="Replace" Height="209" Width="380">
    <StackPanel Orientation="Vertical" Margin="20" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <StackPanel Orientation="Horizontal" Margin="10">
            <Label Content="Old Content" Width="90" FontWeight="DemiBold" ></Label>
            <TextBox Name="OldContent" Text="{Binding From}" Width="200" 
                         BorderBrush="LightBlue" BorderThickness="2"
                         TextChanged="OldContent_TextChanged"
                         />
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="10">
            <Label Content="New Content"  Width="90" FontWeight="DemiBold" ></Label>
            <TextBox Name="NewContent" Text="{Binding To}" Width="200"
                     BorderBrush="LightBlue" BorderThickness="2" 
                     TextChanged="NewContent_TextChanged"/>
        </StackPanel>
    </StackPanel>
</Window>
