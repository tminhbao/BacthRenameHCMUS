                            <MenuItem Header="_Move" Name="Move" />
                            <MenuItem Header="_Remove" Name="Remove" />
                            <MenuItem Header="_Replace" Name="Replace" />
                            <MenuItem Header="_Trim" Name="Trim" />
                            <MenuItem Header="_Extension" Name="Extension" />
                        </MenuItem>
                    </Menu>
                    <Separator />

                    <!--Clear Button-->
                    <Button Name="IconLeftClear" >
                        <Image Source="/Images/refresh.png" Height="20" Width="20" RenderOptions.BitmapScalingMode="HighQuality"></Image>
                    </Button>
                    <Button Name="bnt_Clear">
                        <StackPanel Orientation="Horizontal">
                            <Image Name="IconRightClear" Source="/Images/clear.png" Height="20" Width="20"></Image>
                            <TextBlock Text="Clear" Margin="5,0,0,0"></TextBlock>
                        </StackPanel>
                    </Button>
                    <Separator/>

                    <!--Nhóm button di chuyển phương thức-->
