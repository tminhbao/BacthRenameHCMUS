                    </Button>
                    <Button x:Name="bnt_Last" >
                        <Image Name="IconLast" Source="/Images/gobottom.png" Height="20" Width="20"></Image>
                    </Button>

                </ToolBar>
            </ToolBarTray>
            <ToolBarTray>
                <ToolBar>
                    <!--Button thêm preset-->
                    <Button Name="bnt_AddPreset">
                        <Image Name="IconAddPreset" Source="/Images/add.png" Height="20" Width="20"></Image>
                    </Button>

                    <!--Button lưu preset-->
                    <Button x:Name="bnt_SavePreset" >
                        <Image Name="IconSavePreset" Source="/Images/savepreset.png" Height="20" Width="20"></Image>
                    </Button>
