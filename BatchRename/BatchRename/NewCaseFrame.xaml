<Page x:Class="BatchRename.NewCaseFrame"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BatchRename"
      mc:Ignorable="d" 
      d:DesignHeight="200" d:DesignWidth="400"
      Title="NewCaseFrame"
      Background="White">

    <StackPanel Orientation="Vertical" Margin="20"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
        <RadioButton x:Name="ButtonLowerCase" Content="Set lower case" Margin="5" Checked="ButtonLowerCase_Checked"/>
        <RadioButton x:Name="ButtonUpperCase" Content="Set upper case" Margin="5" Checked="ButtonUpperCase_Checked"/>
        <RadioButton x:Name="ButtonLowerCaseFirstLetter"  Content="Set lower case first letter"  Margin="5" Checked="ButtonLowerCaseFirstLetter_Checked"/>
        <RadioButton x:Name="ButtonUpperCaseFirstLetter"  Content="Set upper case first letter"  Margin="5" Checked="ButtonUpperCaseFirstLetter_Checked"/>
        <RadioButton x:Name="ButtonPascalCase"  Content="Set pascal case"  Margin="5" Checked="ButtonPascalCase_Checked"/>

        <Button x:Name="ReturnOldName" Content="Back" Background="LightGreen" Margin="6" Click="ReturnOldName_Click"/>
    </StackPanel>
</Page>
